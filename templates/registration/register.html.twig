{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block stylesheets %}
    {# Inclure le lien vers la feuille de style Bootstrap (ou votre propre feuille de style) #}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa; /* Couleur de fond */
        }

        .form-container {
            background-color: #ffffff; /* Couleur de fond du formulaire */
            border-radius: 10px; /* Coins arrondis */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Ombre légère */
            padding: 20px; /* Espacement interne */
            margin-top: 50px;
        }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <br>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-container">
                <div class="card-body">
                    <h2 class="text-center mb-4">Inscription</h2>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm,{'attr': {'class': 'form-horizontal'}}) }}

                    <div class="form-group">
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                    </div>

                    <button type="submit" class="btn btn-dark btn-block">{{ button_label|default('s inscrire') }}</button>

    {{ form_end(registrationForm) }}
 </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
