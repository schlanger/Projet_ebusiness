{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="m-5">
        <br>
        <div class="container mt-4">
            <h1 class="mb-5">Liste des produits</h1>

            <div class="row">
                {% for product in products %}
                    <div class="col-lg-4 mb-4">
                        <div class="card h-100">
                            <img src="{{ asset('uploads/attachments/' ~ product.attachement) }}" class="card-img-top" alt="Product Image">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.title }}</h5>
                                <p class="card-text">{{ product.content }}</p>
                                <p class="card-text">{{ product.price / 100 }} €</p>
                            </div>
                            <div class="card-footer">
                                <a href="{{ path('cart_add',{id: product.id}) }}" class="btn btn-success">Ajouter au panier</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {% if products is empty %}
                <div class="alert alert-info mt-4" role="alert">
                    Aucun article trouvé.
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
