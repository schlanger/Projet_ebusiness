{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="m-5">
        <br>
        <div class="container mt-4">
            <h1 class="mb-5">Liste des produits</h1>

            <div class="row">
                {% for product in products %}
                    <div class="col-lg-3 mb-4">
                        <div class="card shadow-sm h-100">
                            <img src="{{ asset('uploads/attachments/' ~ product.attachement) }}" class="card-img-top img-fluid" alt="Product Image">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.title }}</h5>
                                <p class="card-text" style="font-size: 14px;">{{ product.content|raw }}</p>
                                <p class="card-text"><strong>{{ product.price / 100 }} €</strong></p>
                            </div>
                            <a href="{{ path('product_show', {'slug': product.slug}) }}" class="btn btn-success">Voir le produit</a>
                            <div class="card-footer bg-white border-0">
                                <a href="{{ path('cart_add',{id: product.id}) }}" class="btn btn-warning">Ajouter au panier</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {% if products is empty %}
                <div class="alert alert-info mt-4" role="alert">
                    Aucun article trouvé.
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
