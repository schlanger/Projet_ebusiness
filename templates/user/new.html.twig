{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    {# Inclure le lien vers la feuille de style Bootstrap (ou votre propre feuille de style) #}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa; /* Couleur de fond */
        }

        .form-container {
            background-color: #ffffff; /* Couleur de fond du formulaire */
            border-radius: 10px; /* Coins arrondis */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Ombre légère */
            padding: 20px; /* Espacement interne */
            margin-top: 50px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #007bff; /* Couleur de fond du bouton */
            border-color: #007bff; /* Couleur de la bordure du bouton */
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Couleur de fond du bouton au survol */
            border-color: #0056b3; /* Couleur de la bordure du bouton au survol */
        }
    </style>
{% endblock %}
{% block body %}
    <br>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-container">
                <div class="card-body">
            <h2 class="text-center mb-4">Inscription</h2>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_errors(form) }}
            <div class="form-group">
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.roles, {'attr': {'class': 'form-control', 'placeholder': 'roles'}}) }}
            </div>
            <button type="submit" class="btn btn-dark btn-block">{{ button_label|default('s inscrire') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </div>
</div>

{% endblock %}
